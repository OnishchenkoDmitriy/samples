<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "t1000" class="org.training.impl.robot.ModelT1000"
    p:hand-ref="toshibaHand"
    p:leg-ref="toshibaLeg"
    p:head-ref="toshibaHead"
    >

        <constructor-arg value="silver" type="java.lang.String" index="0"/>
        <constructor-arg value="2006" type="int" index="1"/>
        <constructor-arg value="true" type="boolean" index="2"/>

        <!--<property name="hand" ref="toshibaHand"/>
        <property name="leg" ref="toshibaLeg"/>
        <property name="head" ref="toshibaHead"/>-->
    </bean>

    <bean id = "t1000Empty" class="org.training.impl.robot.ModelT1000">
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
        <constructor-arg ref="toshibaHead"/>
    </bean>

    <bean id = "sonyHand" class="org.training.impl.sony.SonyHand"/>
    <bean id = "sonyHead" class="org.training.impl.sony.SonyHead"/>
    <bean id = "sonyLeg" class="org.training.impl.sony.SonyLeg"/>

    <bean id = "toshibaHand" class="org.training.impl.toshiba.ToshibaHand"/>
    <bean id = "toshibaHead" class="org.training.impl.toshiba.ToshibaHead"/>
    <bean id = "toshibaLeg" class="org.training.impl.toshiba.ToshibaLeg"/>


</beans>